# =============================================================================
# EV COPILOT BACKEND ENVIRONMENT VARIABLES
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Client Configuration
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ev-copilot
DB_NAME=ev-copilot

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=7d
REFRESH_JWT_SECRET=your-refresh-token-secret-here

# Email Configuration (for OTP and notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=EV Copilot <noreply@evcopilot.com>

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_TIMEOUT=30000
ML_RETRY_ATTEMPTS=3

# Web Push Notifications (VAPID Keys)
PUBLIC_VAPID_KEY=your-public-vapid-key-here
PRIVATE_VAPID_KEY=your-private-vapid-key-here
VAPID_SUBJECT=mailto:admin@evcopilot.com

# Blockchain Configuration (Hardhat Local Network)
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
AUDIT_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# SMS Configuration (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM=EVCOPILOT

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External APIs
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3000

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_API_KEY=your-analytics-api-key

# Development Tools
DEBUG=ev-copilot:*
SWAGGER_ENABLED=true