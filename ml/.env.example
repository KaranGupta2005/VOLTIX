# EV Copilot ML Service Environment Variables

# API Configuration
ML_HOST=0.0.0.0
ML_PORT=8000
ML_RELOAD=true
ML_LOG_LEVEL=info

# Data Configuration
DATASETS_DIR=datasets
MODELS_DIR=saved_models
MAX_BATCH_SIZE=100

# Model Configuration
FAILURE_CONTAMINATION=0.1
TRAFFIC_N_ESTIMATORS=200
LOGISTICS_MAX_DEPTH=8
ENERGY_LEARNING_RATE=0.1
AUDIT_CONTAMINATION=0.05

# Agent Thresholds
MECHANIC_FAILURE_CRITICAL=0.8
TRAFFIC_QUEUE_THRESHOLD=15
LOGISTICS_STOCKOUT_CRITICAL=0.8
ENERGY_PRICE_HIGH=6.0
AUDIT_ANOMALY_THRESHOLD=0.5

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=300
MAX_WORKERS=4

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE=logs/ml_service.log

# Security
API_KEY_REQUIRED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60